package com.homework.algorthim;

public class Q13Triangle {
	
	public void triangle() {
		int size = 5;
		
		for(int i = 0; i < size+1; i++) {
			for(int j = size; j > i; j--) {
				System.out.println(" ");
			}
			for(int k = 0; k < (2*i-1); k++) {
				if(k%2==0) {
					System.out.println(0);
				} else {
					System.out.println(1);
				}
			}
			System.out.println();
		}
	}

}
